<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Edit User</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="container mx-auto" style="margin-top: 50px;">
	<% if (messages.error) { %>
	<div class="text-red-600 font-bold
            ml-0 md:ml-10 lg:ml-20" 
        role="alert"><%- messages.error %></div>
	<% } %>
    <div class="border border-solid rounded-md shadow-md
            mx-0 md:mx-10 lg:mx-20 
            p-8 lg:p-16"> 
    	<div class="text-neutral-900 text-xl text-center">
			Edit User
		</div>
        <div class="mx-auto 
                w-3/4 md:w-3/5 lg:w-1/3">
            <form action="/users/update/<%= id %>" method="post">
                <div class="flex flex-col py-4">
                    <label>Name:</label>
                    <input type="text" class="border border-gray-500 rounded-md shadow-md pl-2" name="name" value="<%= name %>" autocomplete="off">
                </div>
				<div class="flex flex-col py-4">
                    <label>Email:</label>
                    <input type="text" class="border border-gray-500 rounded-md shadow-md pl-2" name="email" value="<%= email %>" autocomplete="off">
                </div>
				<div class="flex flex-col py-4">
                    <label>Position:</label>
                    <input type="text" class="border border-gray-500 rounded-md shadow-md pl-2" name="position" value="<%= position %>" autocomplete="off">
                </div>
                <div class="flex flex-col py-4">
                    <input type="submit" class="border border-solid shadow-md bg-green-500 hover:bg-green-400 p-2 rounded-md" value="Update"/>
                </div>
            </form>
        </div>
    </div>
</body>
</html>